<div class="min-h-screen bg-gray-100">
  <!-- Header -->
  <header class="bg-[#4BC1B1] text-white py-4 px-6 shadow-md">
    <div class="max-w-2xl mx-auto flex justify-between items-center">
      <h1 class="text-2xl font-bold">
        <%= link_to "Postfacto", retros_path, class: "hover:text-gray-200 transition-colors" %>
      </h1>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-2xl mx-auto py-8 px-4">
    <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200">
      <div class="bg-[#4BC1B1] text-white py-4 px-6">
        <h2 class="text-xl font-semibold">Create a New Retro</h2>
      </div>

      <div class="p-6">
        <%= form_with model: @retro, url: retros_path, method: :post, class: "space-y-6" do |f| %>
          <% if @retro.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <div class="flex items-center gap-2 text-red-800 font-medium mb-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Please fix the following errors:
              </div>
              <ul class="list-disc list-inside text-red-700 text-sm">
                <% @retro.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div>
            <%= f.label :name, "Retro Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :name,
                class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#4BC1B1] focus:border-transparent",
                placeholder: "Sprint 42 Retro",
                required: true %>
          </div>

          <div>
            <%= f.label :slug, "URL Slug", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <div class="flex items-center">
              <span class="text-gray-500 mr-2">/retros/</span>
              <%= f.text_field :slug,
                  class: "flex-1 p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#4BC1B1] focus:border-transparent",
                  placeholder: "sprint-42",
                  required: true %>
            </div>
            <p class="mt-1 text-sm text-gray-500">This will be used in the URL to access your retro</p>
          </div>

          <div>
            <%= f.label :password, "Password (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.password_field :password,
                class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#4BC1B1] focus:border-transparent",
                placeholder: "Leave blank for no password" %>
            <p class="mt-1 text-sm text-gray-500">Set a password to restrict access to this retro</p>
          </div>

          <div>
            <%= f.label :video_link, "Video Call Link (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.url_field :video_link,
                class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#4BC1B1] focus:border-transparent",
                placeholder: "https://meet.google.com/..." %>
            <p class="mt-1 text-sm text-gray-500">Add a video conferencing link for remote team members</p>
          </div>

          <div class="flex justify-end gap-3 pt-4 border-t">
            <%= link_to "Cancel", retros_path, class: "px-6 py-2 text-gray-600 hover:text-gray-800 transition-colors" %>
            <%= f.submit "Create Retro", class: "bg-[#4BC1B1] hover:bg-[#45a89b] text-white px-6 py-2 rounded-lg font-medium transition-colors cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>
  </main>
</div>
