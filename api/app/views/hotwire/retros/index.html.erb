<div class="min-h-screen bg-gray-100">
  <!-- Header -->
  <header class="bg-[#4BC1B1] text-white py-4 px-6 shadow-md">
    <div class="max-w-4xl mx-auto flex justify-between items-center">
      <h1 class="text-2xl font-bold">Postfacto</h1>
      <%= link_to new_retro_path, class: "bg-white text-[#4BC1B1] px-4 py-2 rounded-lg font-medium hover:bg-gray-100 transition-colors" do %>
        New Retro
      <% end %>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-4xl mx-auto py-8 px-4">
    <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200">
      <div class="p-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-6">Your Retrospectives</h2>

        <% if @retros.any? %>
          <div class="space-y-4">
            <% @retros.each do |retro| %>
              <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                <div class="flex justify-between items-center">
                  <div>
                    <h3 class="text-lg font-medium text-gray-800">
                      <%= link_to retro.name, retro_path(retro), class: "hover:text-[#4BC1B1] transition-colors" %>
                    </h3>
                    <p class="text-sm text-gray-500 mt-1">
                      Created <%= time_ago_in_words(retro.created_at) %> ago
                    </p>
                  </div>
                  <div class="flex items-center gap-3">
                    <span class="text-sm text-gray-500">
                      <%= retro.items.count %> items
                    </span>
                    <span class="text-sm text-gray-500">
                      <%= retro.action_items.count %> actions
                    </span>
                    <%= link_to edit_retro_path(retro), class: "text-gray-400 hover:text-[#4BC1B1] transition-colors" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
            <p class="text-gray-500 mb-4">No retrospectives yet</p>
            <%= link_to "Create your first retro", new_retro_path, class: "text-[#4BC1B1] hover:text-[#45a89b] font-medium" %>
          </div>
        <% end %>
      </div>
    </div>
  </main>
</div>
